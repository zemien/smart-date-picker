<Window x:Class="smart_date_picker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:smart_date_picker"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel x:Name="Container" Orientation="Horizontal" Grid.Row="0" />
        <StackPanel x:Name="DateRangeContainer" Grid.Row="1"></StackPanel>
        <StackPanel x:Name="ResultsContainer" Orientation="Horizontal" Grid.Row="2" />
    </Grid>
</Window>